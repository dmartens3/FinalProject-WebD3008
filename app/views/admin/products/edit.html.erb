<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing product</h1>

  <%= render "form", admin_product: @admin_product %>

  <%= link_to "Show this product", [:admin, @admin_product], class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <%= link_to "Back to products", admin_products_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>

  <% if @admin_product.images.any? %>
    <% @admin_product.images.each do |image| %>
      <%= image_tag(image) %>
    <% end %>
  <% else %>
    <p class="text-lg">Missing images!</p>
  <% end %>
</div>
