<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Categories</h1>
    <%= link_to "New category", new_admin_category_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div>
    <table class="text-left">
      <thead>
        <tr class="bg-green-200">
          <th class="p-2">Category:</th>
        </tr>
      </thead>
      <tbody>
        <% @admin_categories.each do |category| %>
        <tr class="even:bg-blue-100 hover:bg-gray-200">
          <td class="p-2"><%= link_to category.name, edit_admin_category_path(category) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
