<!DOCTYPE html>
<html>
    <head>
        <title>FinalProject</title>
        <meta name="viewport" content="width=device-width,initial-scale=1">
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>
        <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

        <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
        <%= javascript_importmap_tags %>
    </head>

    <body>
        <main class="flex">
            <nav class="flex h-full">
                <div class="h-32 p-4 w-screen bg-purple-400 sticky top-0">
                    <div class="flex pl-6">
                        <h1 class="text-lg py-2 text-white font-bold hidden md:block">Store Admin </h1>
                    </div>
                    <ul class="flex flex-row text-white pl-6">
                        <li class="border rounded">
                            <%= link_to admin_path, class: "block px-4 py-2 hover:rounded hover:bg-purple-700" do %>
                                <%= icon('fa-solid', 'home', class: 'mr-3') %> <span class="hidden md:inline-block">Admin Home</span>
                            <% end %>
                        </li>
                    </ul>
                </div>
            </nav>
            <%= yield %>
        </main>
    </body>
</html>
